<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
  <title>{% block title %}Mobile Barometer{% endblock %}</title>
  <link rel="stylesheet"
  href="{{ asset('assets/vendor/bootstrap/dist/css/bootstrap.min.css') }}">
  <link rel="stylesheet"
  href="{{ asset('assets/vendor/css/style.css') }}">
  <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">MobileBarometer</a>
      </div>
    </div>

  </nav>
  <div class="row">
    <div class="col-sm-3 col-md-2 sidebar">
      <ul class="nav nav-sidebar">
        <li><a href="#" >Overview </a></li>
      </ul>

        <ul class="nav nav-sidebar">
          <li><a href="{{ path('fos_user_registration_register') }}">Sign Up<span class="pull-right hidden-xs showopacity glyphicon glyphicon-calendar"></span></a> </li>
          {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
          <li><a href="">Profile<span class="pull-right hidden-xs showopacity glyphicon glyphicon-equalizer"></span></a></li>
          <li><a href="">My Questionnaires<span class="pull-right hidden-xs showopacity glyphicon glyphicon-equalizer"></span></a> </li>
        </ul>
          
                {% if is_granted("ROLE_ADMIN") %}
                <ul class="nav nav-sidebar">
                <li><a href="{{ path('users') }}">Users<span class="pull-right hidden-xs showopacity glyphicon glyphicon-equalizer"></span></a> </li>
                <li><a href="{{ path('teams') }}">Teams<span class="pull-right hidden-xs showopacity glyphicon glyphicon-equalizer"></span></a> </li>
                <li><a href="#">Projects<span class="pull-right hidden-xs showopacity glyphicon glyphicon-equalizer"></span></a> </li>
              </ul>
                {% endif %}
                
                <ul class="nav nav-sidebar">
                <li><a href="{{ path('fos_user_security_logout') }}">
                    {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                </a></li>
              </ul>
            {% endif %}
       
     </div>
     <div class="container-fluid">
      <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        {% block body %}{% endblock %}
      </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>

    <script src="js/ie10-viewport-bug-workaround.js"></script>
    {% block javascripts %}{% endblock %}
  </body>
  </html>
