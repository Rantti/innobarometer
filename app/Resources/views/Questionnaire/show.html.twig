{% extends 'base.html.twig' %}

{% block body %}

{% block main %}
    <h1> Questionnaire{# questionnaire.questionnaire #}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'Sprint Round'|trans }}</th>
                <td>{{ questionnaire.sprintRound }}</td>
            </tr>
            <tr>
                <th>{{ 'Statements'|trans }}</th>
                {% for statement in questionnaire.statements %}
                  <td>{{ statement.statement }}</td>
                {% endfor %}
            </tr>
            <tr>
                <th>{{ 'Extra Round'|trans }}</th>
                <td>{{ questionnaire.extraRound }}</td>
            </tr>
            <tr>
                <th>{{ 'Projects'|trans }}</th>
                {% for project in questionnaire.projects %}
                  <td>{{ project.project }}</td>
                {% endfor %}
            </tr>
        </tbody>
    </table>
{% endblock %}

{% block sidebar %}
    <div class="section">
        <a href="{{ path('questionnaire_post_edit', { id: questionnaire.getId }) }}" class="btn btn-lg btn-block btn-primary">
            {{ 'Edit Questionnaire'|trans }}
        </a>
    </div>
    <br>
    <div class="section">
      <a style="text-decoration: none" data-toggle="modal" data-target="#{{ questionnaire.id }}">
        <button class="btn btn-lg btn-block btn-danger">Delete Questionnaire</button>
    </div>

    <div class="modal fade" id="{{ questionnaire.id }}" role="dialog">
       <div class="modal-dialog">

         <!-- Modal content-->
         <div class="modal-content">
           <div class="modal-header">
             <button type="button" class="close" data-dismiss="modal">&times;</button>
             <h4 class="modal-title">Deleting Questionnaire {{ questionnaire.id }}</h4>
           </div>
           <div class="modal-body">
             <p>Are you sure?</p>
           </div>
           <div class="modal-footer">
             <a class="btn btn-link">
              {{ include('Questionnaire/_form.html.twig', {
                  form: delete_form,
                  button_label: 'action.delete_questionnaire'|trans,
                  button_css: 'btn btn-lg btn-block btn-danger',
                  include_back_to_home_link: false
              }, with_context = false) }}</a>
              <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
          </div>

        </div>
      </div>


{% endblock %}
{% endblock %}
