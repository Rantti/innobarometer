{% extends 'base.html.twig' %}

{% block body %}

{% block main %}
    <h1> Questionnaire{# questionnaire.questionnaire #}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'label.sprintRound'|trans }}</th>
                <td>{{ questionnaire.sprintRound }}</td>
            </tr>
            <tr>
                <th>{{ 'label.statements'|trans }}</th>
                {% for statement in questionnaire.statements %}
                  <td>{{ statement.statement }}</td>
                {% endfor %}
            </tr>
            <tr>
                <th>{{ 'label.extraRound'|trans }}</th>
                <td>{{ questionnaire.extraRound }}</td>
            </tr>
            <tr>
                <th>{{ 'label.projects'|trans }}</th>
                {% for project in questionnaire.projects %}
                  <td>{{ project.project }}</td>
                {% endfor %}
            </tr>
        </tbody>
    </table>
{% endblock %}

{% block sidebar %}
    <div class="section">
        <a href="{{ path('questionnaire_post_edit', { id: questionnaire.getId }) }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-edit"></i> {{ 'action.edit_contents'|trans }}
        </a>
    </div>

    <div class="section">
        {{ include('Questionnaire/_form.html.twig', {
            form: delete_form,
            button_label: 'action.delete_questionnaire'|trans,
            button_css: 'btn btn-lg btn-block btn-danger',
            include_back_to_home_link: false
        }, with_context = false) }}
    </div>

{% endblock %}
{% endblock %}
