{% extends 'base.html.twig' %}

{% block body %}

{% block main %}
    <h1>{{ 'statement.edit_statement'|trans({'%id%': statement.getId}) }}</h1>

    {{ include('Questionnaire/Statement/_form.html.twig', {
        form: edit_form,
        button_label: 'action.save'|trans,
    }, with_context = false) }}
{% endblock %}

{% block sidebar %}
    <div class="section actions">
        {{ include('Questionnaire/Statement/_form.html.twig', {
            form: delete_form,
            button_label: 'action.delete_statement'|trans,
            button_css: 'btn btn-lg btn-block btn-danger',
            include_back_to_home_link: false
        }, with_context = false) }}
    </div>

    {{ parent() }}

{% endblock %}
{% endblock %}
