{% extends 'base.html.twig' %}

{% block body %}

{% block main %}
    <h1>{{ 'Edit Questionnaire'|trans({'%id%': questionnaire.getId}) }}</h1>

    {{ include('Questionnaire/_form.html.twig', {
        form: edit_form,
        button_label: 'Save this Questionnaire'|trans,
    }, with_context = false) }}
{% endblock %}

{% block sidebar %}
<br>
<div class="section">
  <a style="text-decoration: none" data-toggle="modal" data-target="#{{ questionnaire.id }}">
    <button class="btn btn-lg btn-block btn-danger">Delete Questionnaire</button>
</div>

<div class="modal fade" id="{{ questionnaire.id }}" role="dialog">
   <div class="modal-dialog">

     <!-- Modal content-->
     <div class="modal-content">
       <div class="modal-header">
         <button type="button" class="close" data-dismiss="modal">&times;</button>
         <h4 class="modal-title">Deleting Questionnaire {{ questionnaire.id }}</h4>
       </div>
       <div class="modal-body">
         <p>Are you sure?</p>
       </div>
       <div class="modal-footer">
         <a class="btn btn-link">
          {{ include('Questionnaire/_form.html.twig', {
              form: delete_form,
              button_label: 'action.delete_questionnaire'|trans,
              button_css: 'btn btn-lg btn-block btn-danger',
              include_back_to_home_link: false
          }, with_context = false) }}</a>
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        </div>
      </div>

    </div>
  </div>

    {{ parent() }}

{% endblock %}
{% endblock %}
